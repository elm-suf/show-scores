{
  "$schema": "https://railway.app/railway.schema.json",

  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm exec nx run be:build --configuration=production"
  },
  "deploy": {
    "startCommand": "pnpm exec nx run be:serve --configuration=production",
    "healthcheckPath": "/api",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE"
  }
}
